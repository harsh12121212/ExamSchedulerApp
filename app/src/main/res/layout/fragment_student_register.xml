<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentRegisterFragment">

    <include
        android:id="@+id/student_register"
        layout="@layout/basiclayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_student_hl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:text="STUDENT Signup"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/student_register"
        app:layout_constraintEnd_toStartOf="@+id/student_register"
        app:layout_constraintStart_toEndOf="@+id/student_register"
        app:layout_constraintTop_toBottomOf="@+id/student_register"
        app:layout_constraintVertical_bias="0.906" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="550sp"
        android:layout_margin="5sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_name"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"

                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_profile"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:hint="Enter Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_email"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"

                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/purple_200"
                    android:hint="Enter Email Id"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_dob"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"

                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_dob"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:focusable="false"
                    android:hint="Enter Your DOB"
                    android:inputType="date|datetime"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_education"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"

                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_education"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/purple_200"
                    android:hint="Enter your Educational Qualification"
                    android:inputType="textLongMessage"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_technology"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"

                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_trainings"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_technology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/purple_200"
                    android:hint="Enter Technology trainings"
                    android:inputType="textLongMessage|textAutoCorrect"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_workexp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"

                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_workexp"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_workexp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/purple_200"
                    android:hint="Total Work Experience(in years)"
                    android:inputType="number"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/et_stud_techchoice"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/box_border"
                android:dropDownVerticalOffset="60sp"
                android:padding="3sp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/et_stud_loc"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/box_border"
                android:dropDownVerticalOffset="60sp"
                android:padding="3sp"
                android:spinnerMode="dropdown" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_examdate"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"
                android:textColorHint="@color/purple_200"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_examdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_200"
                    android:focusable="false"
                    android:hint="Required Examination Date"
                    android:inputType="date"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_stud_pswd"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="10sp"
                android:textColorHint="@color/purple_200"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/purple_700"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/purple_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stud_pswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/purple_200"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp"
                    app:errorEnabled="true"
                    app:helperText="Required"
                    tools:boxStrokeColor="@color/purple_200"
                    tools:fontFamily="@font/roboto_slab" />


            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_signin"
                android:layout_width="180sp"
                android:layout_height="52sp"
                android:layout_marginStart="106sp"
                android:layout_marginTop="40sp"
                android:layout_marginEnd="106sp"
                android:layout_marginBottom="131sp"
                android:background="@color/purple_200"
                android:text="Sign up"
                android:textColor="@android:color/white"
                android:textSize="15sp" />


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>