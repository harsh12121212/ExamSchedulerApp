<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3sp"
    app:cardCornerRadius="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_centre"
        app:layout_constraintTop_toTopOf="@+id/tv_centre">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="78dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cv_icon" />

        <TextView
            android:id="@+id/tv_studname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_slab"
            android:padding="5sp"
            android:text="Jane Doe"
            android:textColor="@color/purple_200"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_studemail"
            android:layout_width="220dp"
            android:layout_height="26dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/roboto_slab"
            android:padding="2sp"
            android:text="janedoe@gmail.com"
            android:textColor="#AD8DDC"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="63dp" />

        <View
            android:id="@+id/view"
            android:layout_width="325dp"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/purple_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.43"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/title_centre"
            android:layout_width="146dp"
            android:layout_height="27dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:padding="2sp"
            android:text="Selected Centre :"
            android:textColor="#AD8DDC"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/dt_stud_centre"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_city"
            tools:fontFamily="@font/roboto_slab" />

        <TextView
            android:id="@+id/dt_stud_city"
            android:layout_width="146dp"
            android:layout_height="27dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:padding="2sp"
            android:text="Bangalore"
            android:textColor="#AD8DDC"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toEndOf="@+id/title_centre"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:fontFamily="@font/roboto_slab" />

        <TextView
            android:id="@+id/title_city"
            android:layout_width="146dp"
            android:layout_height="27dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:padding="2sp"
            android:text="Selected City :"
            android:textColor="#AD8DDC"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:fontFamily="@font/roboto_slab" />

        <TextView
            android:id="@+id/dt_stud_centre"
            android:layout_width="146dp"
            android:layout_height="27dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="56dp"
            android:padding="2sp"
            android:text="ABC Classes"
            android:textColor="#AD8DDC"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toEndOf="@+id/title_city"
            app:layout_constraintTop_toBottomOf="@+id/dt_stud_city"
            tools:fontFamily="@font/roboto_slab" />

        <TextView
            android:id="@+id/title_date"
            android:layout_width="146dp"
            android:layout_height="27dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="7dp"
            android:padding="2sp"
            android:text="Examination date :"
            android:textColor="#AD8DDC"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/dt_stud_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_centre"
            tools:fontFamily="@font/roboto_slab" />

        <TextView
            android:id="@+id/dt_stud_date"
            android:layout_width="146dp"
            android:layout_height="27dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="64dp"
            android:padding="2sp"
            android:text="11-05-2023"
            android:textColor="#AD8DDC"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dt_stud_centre"
            tools:fontFamily="@font/roboto_slab" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="199dp" />

        <TextView
            android:id="@+id/tv_stud_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="5dp"
            android:padding="2sp"
            android:text="Pending"
            android:textAllCaps="true"
            android:textColor="#AD8DDC"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dt_stud_date"
            tools:fontFamily="@font/roboto_slab" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>